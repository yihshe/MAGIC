{
    "name": "PHYS_VAE_MOGI_B_SMPL",
    "n_gpu": 1,
    "arch": {
        "type": "PHYS_VAE_SMPL",
        "args": {
            "physics": "Mogi",
            "input_dim": 36,
            "hidden_dim": 4,
            "mogi_paras": "configs/mogi_paras.json",
            "station_info": "configs/station_info.json",
            "standardization": {
                "x_mean": "data/processed/mogi/train_x_mean.npy",
                "x_scale": "data/processed/mogi/train_x_scale.npy"
            }
        },
        "phys_vae": {
            "no_phy": false,
            "dim_z_aux": 0,
            "dim_z_phy": 4,
            "activation": "elu",
            "num_units_feat": 128,
            "hidlayers_feat": [
                128
            ],
            "hidlayers_z_aux": [
                128
            ],
            "hidlayers_z_phy": [
                128
            ]
        }
    },
    "data_loader": {
        "type": "GPSSeqDataLoader",
        "type_test": "GPSDataLoader",
        "args": {
            "data_dir": "data/processed/mogi/train.csv",
            "batch_size": 64,
            "shuffle": true,
            "validation_split": 0.0,
            "num_workers": 4,
            "with_const": false
        },
        "data_dir_valid": "data/processed/mogi/valid.csv",
        "data_dir_test": "data/processed/mogi/test.csv"
    },
    "optimizer": {
        "type": "Adam",
        "args": {
            "lr": 0.0003,
            "weight_decay": 1e-4,
            "amsgrad": true
        }
    },
    "loss": "mse_loss",
    "loss_test": "mse_loss",
    "metrics": [],
    "lr_scheduler": {
        "type": "CosineAnnealingLR",
        "args": {
            "T_max": 150
        }
    },
    "trainer": {
        "epochs": 150,
        "save_dir": "saved/mogi",
        "save_period": 10,
        "log_step": 5,
        "verbosity": 2,
        "monitor": "min val_rec_loss",
        "early_stop": 20,
        "input_key": "displacement",
        "output_key": "displacement",
        "stablize_grad": true,
        "grad_clip_norm": 1.0,
        "tensorboard": false,
        "wandb": true,
        "phys_vae": {
            "epochs_pretrain": 20,
            "kl_warmup_epochs": 50,
            "balance_gate": 0.001,
            "balance_data_aug": 1.0
        }
    }
}